{
    // Disable format on save for LaTeX files
    "[latex]": {
        "editor.formatOnSave": false,
        "editor.formatOnPaste": false
    },
    "[tex]": {
        "editor.formatOnSave": false,
        "editor.formatOnPaste": false
    },
    // Disable latexindent if using LaTeX Workshop
    "latex-workshop.latexindent.enabled": false,
    "latex-workshop.latexindent.path": "",
    // General format on save (you can also disable globally if needed)
    "editor.formatOnSave": false
}
